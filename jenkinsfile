pipeline {
    agent any

    environment {
        PYTHON_VERSION = '3.9'
        VENV_PATH = 'venv'
    }

    stages {
     //   stage('Checkout') {
     //       steps {
     //           // Clonar el repositorio
     //        //   checkout scm
     //       }
     //   }
      stage('Clone Repository') {
            steps {
                git 'https://github.com/mirola777/calculator-microservice-python.git'
            }
        }

        stage('Set up Python') {
            steps {
                // Configurar Python y crear un entorno virtual
                sh 'bash -c "python -m venv $VENV_PATH"'
                bat """
                python -m venv ${VENV_PATH}
                """
            }
        }

        stage('Install dependencies') {
            steps {
                // Instalar dependencias
                bat """
                ${VENV_PATH}\\Scripts\\activate
                pip install --upgrade pip
                pip install -r requirements.txt
                """
            }
        }

        stage('Run tests') {
            steps {
                // Ejecutar pruebas
                bat """
                ${VENV_PATH}\\Scripts\\activate
                python -m unittest discover -s test
                """
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Desplegar tu aplicación Flask
                    echo 'Deploying application...'
                    // Ejemplo: bat 'scp -r . user@your_server:/path/to/deploy'
                }
            }
        }
    }

    post {
        always {
            // Limpiar después de que el pipeline se ejecute
            echo 'Cleaning up...'
            bat 'rmdir /S /Q ${VENV_PATH}'
        }
    }
}