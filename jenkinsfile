pipeline {
    agent any

    environment {
        VENV_PATH = 'calculator'
        FLASK_APP = 'calculator.py'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup Virtual Environment') {
            steps {
                script {
                    sh 'bash -c "python -m venv $VENV_PATH"'
                    sh 'bash -c "source $VENV_PATH/bin/activate"'
                }
            }
        }
         stage('Install dependencies') {
            steps {
                sh 'bash -c "source $VENV_PATH/bin/activate && 
                pip install -r requirements.txt"'
            }
        }

        stage('Test') {
            steps {
                echo "Assuming tests are run here. Please replace this with actual test commands."
                sh "source $VENV_PATH/bin/activate && python -m unittest discover -s test"
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying application...'
                }
            }
        }
    }

    post {
        always {
            // Clean up after the pipeline runs
            echo 'Cleaning up...'
            sh 'rm -rf ${VIRTUAL_ENV_DIR}'
        }
    }
}